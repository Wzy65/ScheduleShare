<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/schedule_detail_startTxt"
            android:textColor="@color/black3"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/share_schedule_detail_startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black3"
            android:textSize="16sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/schedule_detail_endTxt"
            android:textColor="@color/black3"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/share_schedule_detail_endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black3"
            android:textSize="16sp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray2">
    </View>

    <com.sendtion.xrichtext.RichTextView
        android:id="@+id/share_schedule_detail_contnt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        app:rt_view_text_line_space="6dp"
        app:rt_view_image_height="200"
        app:rt_view_image_bottom="10"
        app:rt_view_text_size="16sp"
        app:rt_view_text_color="@color/black2"
        />


</LinearLayout>